#include <iostream>
#include <cmath>
using namespace std;
 
struct point //задаём структуру
{
    double x,y;
 
};
 
int main()
{
    int n;
    cin >> n;
 
    point *a = new point[n]; 
    for (int i = 0; i < n; i++)
        cin >> a[i].x >> a[i].y;
    int k = -1; // индекс точки(-1, чтобы не писать ещё раз рассчёт расстояния от точки)
    double m = 0;   // расстояние от точки до остальных точек
    double sum;
    for(int i=0; i<n; i++) {
        sum = 0;
        for(int j=0; j<n; j++) {
            if(j!=i) {
                sum+=sqrt((a[i].x-a[j].x)*(a[i].x-a[j].x)+ (a[i].y-a[j].y)*(a[i].y-a[j].y)); //функция считающая расстояние между координатами
                if(k>=0 && sum>m) break;
            }
        }
        if(k<0 || sum<m) { 
            k=i;
            m=sum;
        }
    }
    cout << k + 1<< endl;
}
