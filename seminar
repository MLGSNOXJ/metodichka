#include <iostream>

using namespace std;

int main() { 
    double b1 = 1, b2 = 2,n, b=0; 
    cin >> n; 
    for(int i = 3; i <= n; i++){ 
        b = (b2 - 1)/(b1+ 1);
        b1 = b2;
        b2 = b;
        
        } 
        cout << b; 
    
}


#include #include

using namespace std;

int main() { 
int f = 1; 
int n=1,x; 
double s = 0; 
cin >> n >> x; 
for(int i = 1; i <=n; i++){ 
s+= f*pow(x,2*n+1);
f*=(f+ 1); 
}

cout << s << endl;
return 0;
}




#include <iostream>
#include <cmath>
using namespace std;

int main()
{
    double a = 0, e, x, s = 0;
    int f = 1;
    cin >> e >> x;
    for (int i = 1; a >= e; i++) {
        for (int j = 1; j < 2 * i; j++) {
            f = j;
        }
        a = (i (i - 1) * pow(x, 2 * i)) / f;
        s += a;
    }
    cout << s;
    return 0;
}
